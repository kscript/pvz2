{
    "esModuleInterop": true,
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "strict": true,
      "jsx": "preserve",
      "importHelpers": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "baseUrl": ".",
      "typeRoots" : ["types"],
      "types": [
        "webpack-env",
        "mocha",
        "chai"
      ],
      "paths": {
        "*": [
          "types/*"
        ],
        "@/*": [
          "src/*"
        ]
      },
      "lib": [
        "esnext",
        "es5",
        "dom",
        "dom.iterable",
        "scripthost"
      ]
    },
    "include": [
      "lib/**/*.ts",
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.vue",
      "tests/**/*.ts",
      "tests/**/*.tsx"
    ],
    "exclude": [
      "node_modules"
    ]
  }